# Jobs Dashboard Environment Configuration
# Copy this file to .env and customize the values for your environment

# Circuit Breaker Configuration
# Number of consecutive failures before opening the circuit
CIRCUIT_BREAKER_THRESHOLD=5

# Time in seconds to wait before attempting to close the circuit (half-open state)
CIRCUIT_BREAKER_TIMEOUT=300

# Rate Limiting Configuration
# Base delay in seconds between API calls
RATE_LIMITER_BASE_DELAY=2

# Maximum delay in seconds for exponential backoff
RATE_LIMITER_MAX_DELAY=60

# Redis Configuration
# Redis connection URL (for local development: redis://localhost:6379)
REDIS_URL=redis://localhost:6379

# Cache time-to-live in seconds
REDIS_TTL=3600

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
