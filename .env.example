# Jobs Dashboard Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# THREADING CONFIGURATION
# =============================================================================

# Maximum number of parallel workers for global searches (1-20)
# Higher values = faster searches but more API load
THREADING_MAX_WORKERS=4

# Timeout in seconds for each country search (1-300)
# Increase for slower connections or more complex searches
THREADING_TIMEOUT_PER_COUNTRY=30

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis connection URL
REDIS_URL=redis://localhost:6379

# Cache TTL in seconds (how long to cache results)
REDIS_TTL=3600

# Maximum Redis connections in the pool
REDIS_MAX_CONNECTIONS=10

# Number of retry attempts for Redis operations
REDIS_RETRY_ATTEMPTS=3

# Delay between retry attempts in seconds
REDIS_RETRY_DELAY=1.0

# Health check interval in seconds
REDIS_HEALTH_CHECK_INTERVAL=30

# =============================================================================
# CIRCUIT BREAKER CONFIGURATION
# =============================================================================

# Number of failures before opening the circuit breaker
CIRCUIT_BREAKER_THRESHOLD=5

# Timeout in seconds before attempting to close the circuit breaker
CIRCUIT_BREAKER_TIMEOUT=300

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Base delay between API calls in seconds
RATE_LIMITER_BASE_DELAY=2.0

# Maximum delay between API calls in seconds (for exponential backoff)
RATE_LIMITER_MAX_DELAY=60.0
